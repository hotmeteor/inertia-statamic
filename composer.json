{
  "name": "hotmeteor/inertia-statamic",
  "description": "An Inertia.js Statamic adapter ",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "inertia",
    "inertia.js",
    "statamic",
    "adapter"
  ],
  "authors": [
    {
      "name": "Adam Campbell",
      "email": "adam@hotmeteor.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "inertiajs/inertia-laravel": "^0.6.0",
    "illuminate/support": "^8.0|^9.0",
    "statamic/cms": "3.1.*|3.2.*|3.3.*"
  },
  "require-dev": {
    "nunomaduro/collision": "^5.1|^6.0",
    "orchestra/testbench": "^6.0",
    "phpunit/phpunit": "^9.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Hotmeteor\\Inertia\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Hotmeteor\\Inertia\\ServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pixelfear/composer-dist-plugin": true
    }
  }
}
